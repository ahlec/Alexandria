<UserControl x:Class="HeadLibrarian.Views.PublishingInfoView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:viewModels="clr-namespace:HeadLibrarian.ViewModels"
			 xmlns:controls="clr-namespace:HeadLibrarian.Controls"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance viewModels:PublishingInfoViewModel}">
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
	</UserControl.Resources>
	<StackPanel>
		<controls:ToggleSectionContainer Header="Email"
										 IsSectionEnabled="{Binding UsesEmail, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
			<controls:GeneralViewRow FieldName="Sender Email:">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>

					<TextBox Grid.Row="0"
							 Grid.Column="0"
							 Grid.ColumnSpan="4"
							 Text="{Binding SenderEmail, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

					<TextBlock Grid.Row="1"
							   Grid.Column="0"
							   Margin="{StaticResource ProjectViewModelVerticalRowPadding}">Host:</TextBlock>

					<TextBox Grid.Row="1"
							 Grid.Column="1"
							 Text="{Binding SenderHost, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
							 Margin="{StaticResource ProjectViewModelVerticalRowPadding}" />

					<TextBlock Grid.Row="1"
							   Grid.Column="2"
							   Margin="{StaticResource ProjectViewModelVerticalRowPadding}">Port:</TextBlock>

					<controls:NumericUpDown Grid.Row="1"
											Grid.Column="3"
											MinValue="1"
											MaxValue="65535"
											Value="{Binding SenderPort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
											Margin="{StaticResource ProjectViewModelVerticalRowPadding}" />

					<CheckBox Grid.Row="2"
							  Grid.Column="0"
							  Grid.ColumnSpan="2"
							  Margin="{StaticResource ProjectViewModelVerticalRowPadding}"
							  IsChecked="{Binding DoesSenderUseSsl, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">Use SSL</CheckBox>

					<CheckBox Grid.Row="3"
							  Grid.Column="0"
							  Grid.ColumnSpan="2"
							  Margin="{StaticResource ProjectViewModelVerticalRowPadding}"
							  IsChecked="{Binding DoesSenderRequireCredentials}">Has Login Credentials</CheckBox>

					<Button Grid.Row="3"
							Grid.Column="2"
							Grid.ColumnSpan="2"
							Margin="{StaticResource ProjectViewModelVerticalRowPadding}"
							Command="{Binding ProvideEmailCredentialsCommand}"
							Visibility="{Binding DoesSenderRequireCredentials, Converter={StaticResource BooleanToVisibilityConverter}}">Provide Login Credentials</Button>
				</Grid>
			</controls:GeneralViewRow>

			<controls:GeneralViewRow FieldName="Recipient Email:">
				<TextBox Text="{Binding RecipientEmail, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
			</controls:GeneralViewRow>

			<Button HorizontalAlignment="Right"
					Margin="{StaticResource ProjectViewModelVerticalRowPadding}"
					Command="{Binding SendTestEmailCommand}">Send Test Email</Button>
		</controls:ToggleSectionContainer>

		<controls:ToggleSectionContainer Header="Tumblr"
										 IsSectionEnabled="{Binding UsesTumblr, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
			<controls:GeneralViewRow FieldName="Consumer Key:">
				<TextBox Text="{Binding TumblrConsumerKey, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
			</controls:GeneralViewRow>
			
			<controls:GeneralViewRow FieldName="Consumer Secret:">
				<TextBox Text="{Binding TumblrConsumerSecret, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
			</controls:GeneralViewRow>

			<Button Command="{Binding AuthenticateTumblrCommand}"
					IsEnabled="{Binding CanAttemptTumblrAuthentication}">Authenticate</Button>

			<controls:GeneralViewRow FieldName="Blog Name:">
				<ComboBox ItemsSource="{Binding AvailableTumblrBlogNames, Mode=OneWay}"
						  SelectedItem="{Binding TumblrBlogName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
						  IsEnabled="{Binding IsAuthenticatedToTumblr}" />
			</controls:GeneralViewRow>

		</controls:ToggleSectionContainer>
	</StackPanel>
</UserControl>
