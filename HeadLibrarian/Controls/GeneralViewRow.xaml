<UserControl x:Class="HeadLibrarian.Controls.GeneralViewRow"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Name="GeneralViewRowControl"
			 Margin="{StaticResource ProjectViewModelVerticalRowPadding}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="{StaticResource FieldNameWidth}" />
			<ColumnDefinition Width="{StaticResource FieldSeparatorWidth}" />
			<ColumnDefinition Width="{StaticResource FieldEditorWidth}" />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Column="0"
				   Style="{StaticResource FieldNameLabel}"
				   Text="{Binding FieldName, ElementName=GeneralViewRowControl}"
				   HorizontalAlignment="Right" />

		<StackPanel Grid.Column="2">
			<ContentPresenter Content="{Binding FieldEditor, ElementName=GeneralViewRowControl}" />
		</StackPanel>
	</Grid>
</UserControl>
