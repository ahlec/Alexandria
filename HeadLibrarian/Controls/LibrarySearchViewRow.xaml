<UserControl x:Class="HeadLibrarian.Controls.LibrarySearchViewRow"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Name="LibrarySearchViewRowControl"
			 Margin="{StaticResource ProjectViewModelVerticalRowPadding}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="{StaticResource FieldNameWidth}" />
			<ColumnDefinition Width="{StaticResource FieldSeparatorWidth}" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="{StaticResource FieldEditorWidth}" />
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Column="0"
				   Style="{StaticResource FieldNameLabel}"
				   Text="{Binding FieldName, ElementName=LibrarySearchViewRowControl}"
				   HorizontalAlignment="Right" />

		<CheckBox Grid.Column="2"
				  IsChecked="{Binding IsFieldEnabled, ElementName=LibrarySearchViewRowControl, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
				  VerticalAlignment="Center" />

		<StackPanel Grid.Column="3">
			<ContentPresenter Content="{Binding FieldEditor, ElementName=LibrarySearchViewRowControl}"
							  IsEnabled="{Binding IsFieldEnabled, ElementName=LibrarySearchViewRowControl}" />
		</StackPanel>
	</Grid>
</UserControl>
