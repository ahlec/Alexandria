<UserControl x:Class="HeadLibrarian.Controls.DateSearchCriteriaEditor"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:HeadLibrarian.Controls"
			 xmlns:viewModels="clr-namespace:HeadLibrarian.ViewModels"
			 mc:Ignorable="d"
			 x:Name="DateSearchCriteriaEditorControl"
			 d:DataContext="{d:DesignInstance viewModels:DateSearchCriteriaViewModel}">
	<UserControl.Resources>
		<DataTemplate x:Key="NoneTemplate">
		</DataTemplate>

		<DataTemplate x:Key="OneNumberTemplate">
			<TextBox Text="{Binding DataContext.Number1, ElementName=DateSearchCriteriaEditorControl, UpdateSourceTrigger=PropertyChanged}" />
		</DataTemplate>

		<DataTemplate x:Key="TwoNumberTemplate">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<TextBox Grid.Column="0"
						 Text="{Binding DataContext.Number1, ElementName=DateSearchCriteriaEditorControl, UpdateSourceTrigger=PropertyChanged}" />

				<TextBlock Grid.Column="1"
						   Margin="6,0,6,0"
						   Text="-" />

				<TextBox Grid.Column="2"
						 Text="{Binding DataContext.Number2, ElementName=DateSearchCriteriaEditorControl, UpdateSourceTrigger=PropertyChanged}" />
			</Grid>
		</DataTemplate>

		<local:SearchCriteriaTemplateSelector x:Key="EditorSelector"
											  NoneTemplate="{StaticResource NoneTemplate}"
											  ExactDataTemplate="{StaticResource OneNumberTemplate}"
											  LessThanDataTemplate="{StaticResource OneNumberTemplate}"
											  GreaterThanDataTemplate="{StaticResource OneNumberTemplate}"
											  RangeDataTemplate="{StaticResource TwoNumberTemplate}" />

		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
	</UserControl.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<ComboBox Grid.Column="0"
				  ItemsSource="{x:Static viewModels:SearchCriteriaViewModelTypeUtils.AllValidDateTypes}"
				  SelectedItem="{Binding Type, Mode=TwoWay}"
				  Margin="0,0,6,0" />

		<ContentControl Grid.Column="1"
						Content="{Binding Type}"
						ContentTemplateSelector="{StaticResource EditorSelector}" />

		<ComboBox Grid.Column="2"
				  ItemsSource="{Binding AllDateFields, ElementName=DateSearchCriteriaEditorControl}"
				  SelectedItem="{Binding DateUnit, Mode=TwoWay}"
				  Visibility="{Binding HasType, Converter={StaticResource BooleanToVisibilityConverter}}"
				  Margin="6,0,6,0" />
		
		<TextBlock Grid.Column="3"
				   Visibility="{Binding HasType, Converter={StaticResource BooleanToVisibilityConverter}}">ago</TextBlock>
	</Grid>
</UserControl>
